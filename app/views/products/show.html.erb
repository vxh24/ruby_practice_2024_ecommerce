<section id="prodetails" class="section-p1">
  <div class="single-pro-img">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, width: "100%", id: "Mainimg" %>
    <% end %>
    <div class="small-img-group">
      <div class="small-img-col">
        <img src="./img/products/f1.jpg" width="100%" class="small-img" alt="">
      </div>
      <div class="small-img-col">
        <img src="./img/products/f2.jpg" width="100%" class="small-img" alt="">
      </div>
      <div class="small-img-col">
        <img src="./img/products/f3.jpg" width="100%" class="small-img" alt="">
      </div>
      <div class="small-img-col">
        <img src="./img/products/f4.jpg" width="100%" class="small-img" alt="">
      </div>
    </div>
  </div>

  <div class="single-pro-details">
    <h6>Home / <%= @product.category.name %></h6>
    <h4><%= @product.name %></h4>
    <h2>$<%= @product.price %></h2>
    <select>
      <option>Select Size</option>
      <option>S</option>
      <option>M</option>
      <option>L</option>
      <option>XL</option>
      <option>XXL</option>
    </select>
    <%= form_with model: @cart, url: add_carts_path(product_id: @product.id), method: :post, local: true do |form| %>
      <%= form.hidden_field :product_id, value: @product_id %>
      <%= form.number_field :quantity, value: 1, min: 1 %>
      <%= form.submit "Add to Cart", class: "normal1" %>
    <% end %>
    <h4>Product Details</h4>
    <span><%= @product.description %></span>
  </div>
</section>
